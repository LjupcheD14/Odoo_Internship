<odoo>
    <record id="view_order_form_inherit_custom_button" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.custom.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header>
                <!-- Custom Button for Report -->
                <button name="action_print_custom_report"
                        type="object"
                        string="Print Custom PDF"
                        class="btn-primary"/>

                <button name="action_export_custom_excel"
                        type="object"
                        string="Print Custom Excel"
                        class="btn-primary"/>

                <button name="action_export_custom_csv"
                        type="object"
                        string="Print Custom CSV"
                        class="btn-primary"/>

                <button name="action_export_custom_json"
                        type="object"
                        string="Export Custom JSON"
                        class="btn-primary"/>
            </header>
        </field>
    </record>
</odoo>